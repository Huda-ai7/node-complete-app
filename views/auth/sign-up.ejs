<%- include('../includes/head.ejs') %>
<body>
  <%- include('../includes/body.ejs') %>
  <main>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h1>Sgin in to our shop!</h1>
            </div>
            <div class="card-body">
              <% if(errorMessage){%>
              <div class="alert alert-danger text-center" role="alert">
                <%= errorMessage %>
              </div>
              <%}%>
              <form action="/sign-up" method="post" novalidate>
                <div class="row">
                  <label for="myE" class="form-label">Email</label>
                  <input
                    type="email"
                    class="form-control <%= validationErrors.find(e => e.path === 'myEmail') ? 'border border-danger' : '' %>"
                    name="myEmail"
                    id="myE"
                    value="<%= oldInput.email %>"
                  />
                </div>
                <div class="row mt-2">
                  <label for="myP" class="form-label">Password</label>
                  <input
                    type="password"
                    class="form-control <%= validationErrors.find(e => e.path === 'myPassword') ? 'border border-danger' : '' %>"
                    name="myPassword"
                    id="myP"
                    value="<%= oldInput.password %>"
                  />
                </div>
                <div class="row mt-2">
                  <label for="myPCon" class="form-label"
                    >Confirm Password</label
                  >
                  <input
                    type="password"
                    class="form-control <%= validationErrors.find(e => e.path === 'myPasswordC') ? 'border border-danger' : '' %>"
                    name="myPasswordC"
                    id="myPCon"
                    value="<%= oldInput.confirmedPsaaword %>"
                  />
                </div>
                <div class="row mt-3 justify-content-center">
                  <div class="col-md-6">
                    <input type="hidden" name="_csrf" value="<%= csrfToken%>" />
                    <button type="submit" class="btn btn-primary w-100">
                      Sign-in
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
