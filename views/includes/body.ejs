<header class="main-header">
  <nav class="main-header-nav">
    <ul class="main-header-unorder-list">
      <li class="un-list-item">
        <a href="/" class="<%= path === '/' ? 'active' : '' %>">Shop</a>
      </li>
      <li class="un-list-item">
        <a href="/products" class="<%= path === '/products' ? 'active' : '' %>"
          >Products</a
        >
      </li>
      <% if(isAuthenticated) {%>
      <li class="un-list-item">
        <a href="/cart" class="<%= path === '/cart' ? 'active' : '' %>"
          >My Cart</a
        >
      </li>
      <li class="un-list-item">
        <a href="/orders" class="<%= path === '/orders' ? 'active' : '' %>"
          >Orders</a
        >
      </li>
      <li class="un-list-item">
        <a
          href="admin/add-product"
          class="<%= path === '/admin/add-product' ? 'active' : '' %>"
          >Add Products</a
        >
      </li>
      <li class="un-list-item">
        <a
          href="/admin/products"
          class="<%= path === '/admin/products' ? 'active' : '' %>"
          >Admin Products</a
        >
      </li>
      <% } %>
    </ul>
    <ul class="main-header-unorder-list align-items-center">
      <% if(!isAuthenticated) {%>
      <li class="un-list-item">
        <a href="/login" class="<%= path === '/login' ? 'active' : '' %>"
          >Login</a
        >
      </li>
      <li class="un-list-item">
        <a href="/sign-up" class="<%= path === '/sign-up' ? 'active' : '' %>">
          Sign up
        </a>
      </li>
      <% } else { %>
      <li class="un-list-item">
        <form action="/logout" method="post" class="mb-0">
          <input type="hidden" name="_csrf" value="<%= csrfToken%>" />
          <button type="submit" class="btn btn-dark">Logout</button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>
