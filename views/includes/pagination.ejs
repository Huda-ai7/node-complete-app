<div class="d-flex justify-content-center mt-2">
  <nav aria-label="Page navigation">
    <ul class="pagination">
      <% if(currentPage !== 1 && prevPage !== 1){ %>
      <li class="page-item">
        <a class="page-link" href="?page=1">1</a>
      </li>
      <%}%> <% if(hasPrevPage){ %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= prevPage %>" aria-label="Previous">
          <%= prevPage %>
        </a>
      </li>
      <% } %>
      <li class="page-item">
        <a class="page-link active" href="?page=<%= currentPage %>">
          <%= currentPage %>
        </a>
      </li>

      <% if(hasNextPage){ %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= nextPage %>" aria-label="Next">
          <%= nextPage %>
        </a>
      </li>
      <% } %> <% if(lastPage !== currentPage && nextPage !== lastPage){ %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= lastPage %>"> <%= lastPage %> </a>
      </li>
      <% } %>
    </ul>
  </nav>
</div>
